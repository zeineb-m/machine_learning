pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build application') {
            steps {
                sh 'npm run build-dev'
            }
        }
    }

    post {
        failure {
            echo 'Build failed! Check the logs for details.'
        }
        success {
            echo 'Build completed successfully! 🎉'
        }
    }
}
